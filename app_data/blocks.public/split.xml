    <functions>
        <![CDATA[
void lvSplit( const cv::Mat *in1, cv::Mat *out1, cv::Mat *out2, cv::Mat *out3)
{
	std::vector<cv::Mat> planes;
	cv::split( *in1, planes);

	*out1 = planes[0];

	if( planes.size() >= 2 )
		*out2 = planes[1];

	if( planes.size() >= 3 )
		*out3 = planes[2];
}
        ]]>
    </functions>
    
