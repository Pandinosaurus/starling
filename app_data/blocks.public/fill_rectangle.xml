	<includes>
		<![CDATA[
		]]>
	</includes>

	<functions>
		<![CDATA[
void fillRectangle( const cv::Scalar& s, const cv::Mat *in1, const cv::Rect *in2, cv::Mat *out)
{
	if( (! in1) || (! in1->data) )
		return;
	
	in1->copyTo(*out); 
	cv::Mat imgROI = (*out)(*in2);
	imgROI.setTo(s);
}
		]]>
	</functions>
	
