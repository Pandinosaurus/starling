void drawCircle( const cv::Mat *in1, const cv::Point *in2, cv::Mat *out, int radius, const cv::Scalar& color, int thickness, int lineType, int shift)
{
	if( (! in1) || (! in1->data) )
		return;
	
	in1->copyTo(*out); 
	cv::circle( *out, *in2, radius, color, thickness, lineType, shift);
}
