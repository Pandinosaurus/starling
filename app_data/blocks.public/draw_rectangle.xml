	<functions>
		<![CDATA[
void drawRectangle( const cv::Mat *in1, const cv::Rect *in2, cv::Mat *out, const cv::Scalar& color, int thickness)
{
	if( (! in1) || (! in1->data) )
		return;
	
	in1->copyTo(*out); 
	cv::rectangle( *out, *in2, color, thickness);
}
