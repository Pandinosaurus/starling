	<functions>
		<![CDATA[
void resizeImage( int interpolation, const cv::Mat *in1, const cv::Rect *in2, cv::Mat *out)
{
	if( (! in1) || (! in1->data) )
		return;
	
	*out = cv::Mat( in2->height, in2->width, in1->type());
	cv::resize( *in1, *out, out->size(), 0.0, 0.0, interpolation);	
}
		]]>
