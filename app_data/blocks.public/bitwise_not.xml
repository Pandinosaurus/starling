    <functions>
        <![CDATA[
void lvBitwiseNot( const cv::Mat *in1, const cv::Mat *in2, cv::Mat *out)
{
	if( in1 == NULL )
		return;

	if( in2 == NULL )
	{
		// no mask provided
		cv::bitwise_not( *in1, *out);
	}
	else
	{
		cv::bitwise_not( *in1, *out, *in2);
	}
}
        ]]>
    </functions>
    
