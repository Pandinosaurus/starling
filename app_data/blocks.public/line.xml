void drawLine( const cv::Mat *in1, const cv::Point *in2, const cv::Point *in3, cv::Mat *out,  const cv::Scalar& color, int thickness, int lineType, int shift)
{
	if( (! in1) || (! in1->data) )
		return;
	
	in1->copyTo(*out); 
	cv::line( *out, *in2, *in3, color, thickness, lineType, shift);
}
